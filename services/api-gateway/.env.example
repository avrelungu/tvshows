# API Gateway Environment Variables

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000
CORS_ALLOWED_HEADERS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD
CORS_EXPOSED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Service URLs
AUTH_SERVICE_URL=http://localhost:8081
USER_SERVICE_URL=http://localhost:8082
SHOWS_SERVICE_URL=http://localhost:8083
REVIEW_SERVICE_URL=http://localhost:8084

# Server Configuration
SERVER_PORT=8080

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_GATEWAY=DEBUG
LOGGING_LEVEL_WEB=INFO
LOGGING_LEVEL_RESILIENCE=INFO

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=